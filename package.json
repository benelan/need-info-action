{
  "name": "need-info-action",
  "version": "2.0.0",
  "private": true,
  "description": "A GitHub Action that requests more info when required content is not included in an issue",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "release:prepare": "standard-version",
    "release:publish": "git push --follow-tags origin main",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint:fix && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benelan/need-info-action.git"
  },
  "keywords": [
    "actions",
    "need info",
    "automation"
  ],
  "author": "Ben Elan",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.48.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.30.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.1.7",
    "jest": "^29.3.1",
    "prettier": "2.8.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
